@using _1015bookstore.data.Enums
@model _1015bookstore.viewmodel.Catalog.Categories.CategoryCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
            <h3 class="m-0 font-weight-bold text-primary">Tạo mới sản phẩm</h3>
            @if (ViewBag.error != null)
            {
                <div id="msg" class="card bg-danger text-white shadow">
                    <div class="card-body">
                        @ViewBag.error
                    </div>
                </div>
            }
            <div>
                <a asp-action="Index" asp-controller="Product">Xem danh sách</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="sCate_name" class="control-label"></label>
                            <input asp-for="sCate_name" class="form-control" />
                            <span asp-validation-for="sCate_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="iCate_parent_id" class="control-label"></label>
                            <select asp-for="iCate_parent_id" class="form-control" asp-items="@ViewBag.ParentCate">
                                <option value="0">--Chọn danh mục cha--</option>
                            </select>
                            <span asp-validation-for="iCate_parent_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="stCate_show" class="control-label"></label>
                            <select asp-for="stCate_show" class="form-control">
                                <option value=0>Hiển thị taskbar</option>
                                <option value=1>Hiển thị yêu thích</option>
                                <option value=2>Không hiển thị</option>
                            </select>
                            <span asp-validation-for="iCate_parent_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

