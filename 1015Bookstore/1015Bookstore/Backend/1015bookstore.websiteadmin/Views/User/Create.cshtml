@model _1015bookstore.viewmodel.System.Users.RegisterAdminRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
            <h3 class="m-0 font-weight-bold text-primary">Tạo mới người dùng Admin</h3>
            <div>
                <a asp-action="Index" asp-controller="User">Xem danh sách người dùng</a>
            </div>
        </div>
        <div class="card-body">
                <div class="col-md-12">
                    <form asp-action="Create">
                        @if (ViewBag.error != null)
                        {
                            <p class="text-danger">*@ViewBag.error</p>
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                        <div class="form-group col-sm-6">
                                <label asp-for="sUser_firstname" class="control-label"></label>
                                <input asp-for="sUser_firstname" class="form-control" />
                                <span asp-validation-for="sUser_firstname" class="text-danger"></span>
                            </div>
                        <div class="form-group col-sm-6">
                                <label asp-for="sUser_lastname" class="control-label"></label>
                                <input asp-for="sUser_lastname" class="form-control" />
                                <span asp-validation-for="sUser_lastname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                        <div class="form-group col-sm-6">
                            <label asp-for="dtUser_dob" class="control-label"></label>
                            <input asp-for="dtUser_dob" class="form-control" />
                            <span asp-validation-for="dtUser_dob" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="bUser_sex" class="control-label"></label> <br />
                            <select class="form-control col-sm-12" asp-for="bUser_sex">
                                <option value=true selected>Nam</option>
                                <option value=false>Nữ</option>
                            </select>
                            <span asp-validation-for="bUser_sex" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="sUser_email" class="control-label"></label>
                            <input asp-for="sUser_email" class="form-control" />
                            <span asp-validation-for="sUser_email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="sUser_phonenumber" class="control-label"></label>
                            <input asp-for="sUser_phonenumber" class="form-control" />
                            <span asp-validation-for="sUser_phonenumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="sUser_username" class="control-label"></label>
                            <input asp-for="sUser_username" class="form-control" />
                            <span asp-validation-for="sUser_username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="sUser_password" class="control-label"></label>
                            <input asp-for="sUser_password" class="form-control" />
                            <span asp-validation-for="sUser_password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="sUser_confirmpassword" class="control-label"></label>
                            <input asp-for="sUser_confirmpassword" class="form-control" />
                            <span asp-validation-for="sUser_confirmpassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tạo mới" class="btn btn-primary" id="liveToastBtn" />
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>

